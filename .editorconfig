root = true

# ==============================
# Global defaults
# ==============================
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# ==============================
# Shell scripts
# ==============================
[*.{sh,zsh}]
indent_style = space
indent_size = 2

# ==============================
# TOML
# ==============================
[*.toml]
indent_style = space
indent_size = 2

# ==============================
# Chezmoi templates
# ==============================
[*.tmpl]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false

# ==============================
# Markdown
# ==============================
[*.md]
trim_trailing_whitespace = false
max_line_length = off
